{
  "name": "node_ts_starter",
  "version": "1.0.0",
  "description": "Backend for invoicing app",
  "main": "index.js",
  "scripts": {
    "dev": "npx nodemon",
    "start": "node build/server.js",
    "build": "rimraf ./build && tsc",
    "build-and-start": "npm run build && npm run start",
    "lint": "eslint . --ext  .ts ",
    "lint-and-fix": "eslint . --ext  .ts --fix ",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "export ENV=TEST && npm run build && jest --verbose --runInBand && rimraf ./build"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(spec|test).[j]s?(x)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kcde/invoice-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kcde/invoice-backend/issues"
  },
  "homepage": "https://github.com/kcde/invoice-backend#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.1.2",
    "@types/supertest": "^2.0.12",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb-memory-server": "^8.12.2",
    "mongoose": "^7.2.2",
    "nanoid": "^3.3.6",
    "yup": "^1.2.0"
  }
}
